<Window x:Class="Sales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sales"
        mc:Ignorable="d"
        Icon="icon.ico"
        Title="KPI менеджеров по продажам" Height="750" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            
            <!-- Фильтры -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Дата:" Margin="10,0,0,0"/>
                <DatePicker x:Name="datePicker" SelectedDateChanged="FiltersChanged"/>
                
                <Label Content="Секция:" Margin="10,0,0,0"/>
                <ComboBox x:Name="cmbSections" Width="140" SelectionChanged="FiltersChanged"/>
                
                <Label Content="Менеджер:" Margin="10,0,0,0"/>
                <ComboBox x:Name="cmbManagers" Width="120" SelectionChanged="FiltersChanged"/>
            </StackPanel>
            
            <!-- Статистика -->
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="5" Grid.Column="0">
                    <Label x:Name="lblDealStats" FontWeight="Bold" Margin="5"/>
                </StackPanel>
                <StackPanel  Margin="5" Grid.Column="1">
                    <Label x:Name="lblCallsStats" FontWeight="Bold" Margin="5"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Таблица сделок -->
            <Label Content="Список сделок" FontWeight="Bold" Margin="5"/>
            <DataGrid x:Name="dealsDataGrid" AutoGenerateColumns="True" Height="200" Margin="5" IsReadOnly="True"/>
            
            <!-- Таблица звонков -->
            <Label Content="Список звонков" FontWeight="Bold" Margin="5"/>
            <DataGrid x:Name="callsDataGrid" AutoGenerateColumns="True" Height="200" Margin="5" IsReadOnly="True"/>
            
        </StackPanel>
    </Grid>
</Window>
